@prefix ex:   <http://example.com/dpp#> .
@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

### Classes
ex:Product     a rdfs:Class .
ex:Component   a rdfs:Class .
ex:Material    a rdfs:Class .
ex:ProcessStep a rdfs:Class .
ex:Standard    a rdfs:Class .

### Subclasses
ex:Battery        rdfs:subClassOf ex:Component .
ex:WirelessModule rdfs:subClassOf ex:Component .

### Properties
ex:hasComponent        a rdf:Property ; rdfs:domain ex:Product ;  rdfs:range ex:Component .
ex:hasStep             a rdf:Property ; rdfs:domain ex:Product ;  rdfs:range ex:ProcessStep .
ex:requiresCompliance  a rdf:Property ; rdfs:domain ex:Product ;  rdfs:range ex:Standard .
ex:requiresStep        a rdf:Property ; rdfs:domain ex:Product ;  rdfs:range ex:ProcessStep .
ex:usesMaterial        a rdf:Property ; rdfs:domain ex:Component ; rdfs:range ex:Material .

### Standards & canonical steps
ex:BatterySafetyStandard      a ex:Standard .
ex:WirelessComplianceStandard a ex:Standard .
ex:RoHSStandard               a ex:Standard .

ex:BatteryTestStep  a ex:ProcessStep .
ex:WirelessTestStep a ex:ProcessStep .

### Materials
ex:LeadMaterial a ex:Material .

### Product A
ex:ProductA a ex:Product ;
    ex:hasComponent ex:Battery1, ex:WirelessModule1, ex:Board1 ;
    ex:hasStep ex:StepA_Assembly, ex:StepA_Packaging .

ex:Battery1 a ex:Battery .
ex:WirelessModule1 a ex:WirelessModule .
ex:Board1 a ex:Component ; ex:usesMaterial ex:LeadMaterial .

ex:StepA_Assembly  a ex:ProcessStep .
ex:StepA_Packaging a ex:ProcessStep .

### Product B
ex:ProductB a ex:Product ;
    ex:hasComponent ex:Board2 ;
    ex:hasStep ex:StepB_Assembly, ex:StepB_Packaging .

ex:Board2 a ex:Component ; ex:usesMaterial ex:LeadMaterial .

ex:StepB_Assembly  a ex:ProcessStep .
ex:StepB_Packaging a ex:ProcessStep .

### Product C
ex:ProductC a ex:Product ;
    ex:hasComponent ex:WirelessModule2 ;
    ex:hasStep ex:StepC_Assembly, ex:WirelessTestStep, ex:StepC_Packaging .

ex:WirelessModule2 a ex:WirelessModule .
ex:StepC_Assembly  a ex:ProcessStep .
ex:StepC_Packaging a ex:ProcessStep .